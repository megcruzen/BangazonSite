@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h1>Empty Cart</h1>

<div>
    <h5>Are you sure you want to empty your shopping cart?</h5>
    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Yes, Empty My Cart" class="btn btn-danger" /> &nbsp; <a asp-action="Cart">Cancel</a>
    </form>
</div>
